    "import json\n",
    "\n",
    "data = json.load(open(\"data.json\"))\n",
    "\n",
    "def translate(word):\n",
    "    word = word.lower()\n",
    "    if word in data:\n",
    "        return data[word]\n",
    "    else:\n",
    "        return \"Please enter a valid input\"\n",
    "\n",
    "word = input(\"Enter the word: \")\n",
    "print(translate(word))"
